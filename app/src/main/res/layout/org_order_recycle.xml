<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    app:cardElevation="200dp"
    app:cardCornerRadius="50dp"
    android:layout_margin="10dp"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:background="#01557C"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"

        >

    <TextView
        android:id="@+id/org_order_recycle_itemlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/org_order_recycle_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/org_order_recycle_addres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:id="@+id/org_order_recycle_ordertype"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="sadfg"
          android:layout_gravity="right"
            android:background="@drawable/status_pending"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>


    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>