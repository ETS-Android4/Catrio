<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_dash_fragment.fooddetails"
    android:background="@drawable/back18">
    <TextView
        android:id="@+id/textView15"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:text="ITEM DETAILS"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_margin="20dp"
       />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
    <ImageView
        android:id="@+id/fooddetails_pic"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:srcCompat="@drawable/profile_pic_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="FOOD LIST"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fooddetails_itemlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|left"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/textView8"
               android:layout_width="90dp"
               android:layout_height="50dp"
               android:layout_marginRight="40dp"
               android:gravity="center_horizontal|center_vertical"
               android:text="FOOD TYPE"
               android:textColor="#FFFFFF"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/fooddeatils_foodtype"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="start|left"
               android:text="TextView"
               android:textColor="#FFFFFF"
               android:textStyle="bold" />
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginRight="40dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="PRICE "
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fooddeatil_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|left"
                android:text="TextView"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </LinearLayout>

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

           <TextView
               android:id="@+id/textView9"
               android:layout_width="90dp"
               android:layout_height="50dp"
               android:layout_marginRight="40dp"
               android:gravity="center_horizontal|center_vertical"
               android:text="CATERIN NAME"
               android:textStyle="bold"
               android:textColor="#FFFFFF" />

           <TextView
               android:id="@+id/fooddeatils_orgname"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="start|left"
               android:text="TextView"
               android:textColor="#FFFFFF"
               android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text=" ORG ADDRESS"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fooddeatils_orgnaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|left"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/textView11"
               android:layout_width="90dp"
               android:layout_height="50dp"
               android:layout_marginRight="40dp"
               android:gravity="center_horizontal|center_vertical"
               android:text="ORG CONTACT"
               android:textColor="#FFFFFF"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/fooddeatils_orgcontact"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="start|left"
               android:text="TextView"
               android:textColor="#FFFFFF"
               android:textStyle="bold" />
       </LinearLayout>

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

           <TextView
               android:id="@+id/textView12"
               android:layout_width="90dp"
               android:layout_height="50dp"
               android:gravity="center_horizontal|center_vertical"
               android:text="ORG RATING"
               android:textColor="#FFFFFF"
               android:textStyle="bold" />

        <RatingBar
            android:id="@+id/fooddeatils_orgrating"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:numStars="5"
            android:stepSize=".25"
            style = "?android:attr/ratingBarStyleIndicator"
            android:isIndicator="true"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/fooditemlist_order"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/signup_button_shape"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:layout_marginBottom="10dp"
        android:text="ORDER"
        android:textColor="#05178A"
        android:textStyle="bold" />
   </LinearLayout>
    </ScrollView>


</LinearLayout>