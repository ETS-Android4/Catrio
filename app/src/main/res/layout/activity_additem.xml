<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".org.additem"
    android:background="@drawable/res_back9">






    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:gravity="center"
                android:text="SIGNUP"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/food_list"
                android:layout_width="360dp"
                android:layout_height="200dp"


                android:layout_margin="15dp"
                android:background="@drawable/input_shape"
                android:hint="ITEM LIST"
                android:inputType="textMultiLine"
                android:paddingLeft="12dp"

                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <Spinner
                android:id="@+id/food_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"

                android:background="@drawable/input_shape"/>


            <EditText
                android:id="@+id/food_price"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:background="@drawable/input_shape"
                android:hint="PRICE FOR 1 SET "
                android:inputType="number"
                android:paddingLeft="15dp"
                />


            <ImageView
                android:id="@+id/food_pic"
                android:layout_width="150dp"
                android:src="@drawable/back2"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/food_submit"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@drawable/signup_button_shape"
                android:paddingLeft="12dp"
                android:text="ADD FOOD"
                android:textColor="#0000ff"
                android:gravity="center"/>




        </LinearLayout>
    </ScrollView>
</LinearLayout>