<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".organization_dash"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    android:id="@+id/organization_dashboard_drawer"
    tools:openDrawer="start"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/organization_dash_toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#0BE1F4"
            />

        <FrameLayout
            android:id="@+id/organization__dash_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/organization_dash_nav"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/back2"
        android:layout_gravity="start"
        app:headerLayout="@layout/organization_dash_nav_head"
        app:menu="@menu/organization_dash_nav_menu"
        app:itemTextColor="#28E6D0"
        app:itemIconTint="#23A129"/>




</androidx.drawerlayout.widget.DrawerLayout>